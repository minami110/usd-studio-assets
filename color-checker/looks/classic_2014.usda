#usda 1.0
(
    defaultPrim = "classic_2014"
)

def "classic_2014" (
    references = @./material_base.usda@</_material_base>
)
{
    # Override USD Preview Surface
    over "usdTexDiffuse"
    {
        asset inputs:file = @../textures/ColorChecker2014_diffuse_acescg.exr@
    }

    # Override Arnold Standard Surface
    over "arTexBaseColor"
    {
        asset inputs:filename = @../textures/ColorChecker2014_diffuse_acescg.exr@
    }
}
